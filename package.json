{
  "name": "foodbudget",
  "version": "1.7.3",
  "repository": "https://github.com/Lilmortal/foodbudget.git",
  "author": "The Food Budget <thefoodbudget@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.2",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "commitlint": "^9.1.2",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && run-p -c 'test*'"
    }
  },
  "scripts": {
    "setup": "docker-compose down -v && docker-compose up -d && lerna run setup --stream",
    "start": "lerna run start --stream --parallel",
    "test": "lerna run test --stream --parallel",
    "test:integration": "lerna run test:integration --stream --parallel",
    "lint": "lerna run lint --stream --parallel",
    "release": "lerna publish --no-commit-hooks"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
