{
  "name": "foodbudget",
  "version": "1.7.0",
  "main": "index.js",
  "repository": "https://github.com/Lilmortal/foodbudget.git",
  "author": "Jack Tan <jacktan165@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-jest": "^26.6.1",
    "commitlint": "^9.1.2",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "run-p -c 'lint' 'test:unit --coverage'"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "build:ui": "yarn workspace @foodbudget/ui build",
    "build:ci": "yarn compile:ui && yarn build",
    "sb": "yarn workspace @foodbudget/ui sb",
    "start": "dotenv -e .env -- lerna run start --stream --parallel",
    "start:back": "dotenv -e .env -- yarn workspace @foodbudget/api start",
    "start:ui": "yarn workspace @foodbudget/ui start",
    "generate": "dotenv -e .env -- yarn workspace @foodbudget/api generate",
    "start:studio": "dotenv -e .env -- yarn workspace @foodbudget/api start:studio",
    "migrate:save": "dotenv -e .env -- yarn workspace @foodbudget/api migrate:save",
    "migrate:up": "dotenv -e .env -- yarn workspace @foodbudget/api migrate:up",
    "start:cron": "dotenv -e .env -- yarn workspace @foodbudget/jobs start",
    "test": "jest --changedSince=master --watch",
    "test:unit": "jest --changedSince=master",
    "test:back": "jest --projects=packages/@foodbudget/backend --changedSince=master",
    "test:ui": "jest --projects=packages/@foodbudget/frontend --changedSince=master",
    "test:back-int": "jest --projects=packages/@foodbudget/backend --testRegex .*/src/.*.ispec.ts --changedSince=master",
    "test:ui-int": "jest --projects=packages/@foodbudget/frontend --testRegex .*/src/.*.ispec.ts --changedSince=master",
    "test:integration": "yarn test:back-int && yarn test:ui-int",
    "lint:check-types": "lerna run check-types --stream --parallel",
    "lint:ts": "eslint '**/*.ts' --fix",
    "lint": "run-p -c 'lint:*'",
    "compile:ui": "yarn workspace @foodbudget/ui compile",
    "release": "lerna publish --no-commit-hooks --yes"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "dotenv-cli": "^4.0.0"
  }
}
