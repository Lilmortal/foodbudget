{
  "name": "foodbudget",
  "version": "1.7.1",
  "main": "index.js",
  "repository": "https://github.com/Lilmortal/foodbudget.git",
  "author": "Jack Tan <jacktan165@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.2",
    "commitlint": "^9.1.2",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "standard-version": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
