{
  "name": "foodbudget",
  "version": "1.7.0",
  "main": "index.js",
  "repository": "https://github.com/Lilmortal/foodbudget.git",
  "author": "Jack Tan <jacktan165@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-jest": "^26.6.1",
    "commitlint": "^9.1.2",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn test:unit --coverage --changedSince=master"
    }
  },
  "scripts": {
    "build": "dotenv -e .env -- lerna run build --stream",
    "sb": "dotenv -e .env -- lerna run sb --stream --parallel",
    "start": "dotenv -e .env -- lerna run start --stream --parallel",
    "start:back": "dotenv -e .env -- lerna run start --ignore=@foodbudget/ui --stream --parallel",
    "start:front": "dotenv -e .env -- lerna run start --scope=@foodbudget/ui --stream --parallel",
    "generate": "dotenv -e .env -- yarn workspace @foodbudget/backend/api generate",
    "start:studio": "dotenv -e .env -- yarn workspace @foodbudget/backend/api start:studio",
    "migrate:save": "dotenv -e .env -- yarn workspace @foodbudget/backend/api migrate:save",
    "migrate:up": "dotenv -e .env -- yarn workspace @foodbudget/backend/api migrate:up",
    "start:cron": "lerna run start:cron --stream --parallel",
    "test": "jest --watch",
    "test:unit": "jest",
    "test:back": "jest --projects=packages/@foodbudget/backend",
    "test:front": "jest --projects=packages/@foodbudget/frontend",
    "test:back-int": "jest --projects=packages/@foodbudget/backend --testRegex .*/src/.*.ispec.ts",
    "test:front-int": "jest --projects=packages/@foodbudget/frontend --testRegex .*/src/.*.ispec.ts",
    "test:integration": "yarn test:back-int && yarn test:front-int",
    "check-types": "lerna run check-types --stream --parallel",
    "lint:ts": "eslint '**/*.ts' --fix && yarn check-types",
    "lint": "run-p -c 'lint:*'",
    "release": "lerna publish --no-commit-hooks --yes"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "dotenv-cli": "^4.0.0"
  }
}
