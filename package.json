{
  "name": "foodbudget",
  "version": "1.7.0",
  "main": "index.js",
  "repository": "https://github.com/Lilmortal/foodbudget.git",
  "author": "Jack Tan <jacktan165@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "commitlint": "^9.1.2",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn test:unit"
    }
  },
  "scripts": {
    "start": "dotenv -e .env -- lerna run start --stream --parallel",
    "generate": "dotenv -e .env -- yarn workspace @foodbudget/api generate",
    "migrate:save": "dotenv -e .env -- yarn workspace @foodbudget/api migrate:save",
    "migrate:up": "dotenv -e .env -- yarn workspace @foodbudget/api migrate:up",
    "start:cron": "lerna run start:cron --stream --parallel",
    "test:unit": "jest",
    "test:integration": "jest --testRegex .*/src/.*.ispec.ts",
    "check-types": "tsc --noemit",
    "test": "jest --watch",
    "lint:ts": "eslint **/*.ts --fix && yarn check-types",
    "lint": "run-p -c 'lint:*'",
    "release": "lerna publish --no-commit-hooks"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "dotenv-cli": "^4.0.0"
  }
}
