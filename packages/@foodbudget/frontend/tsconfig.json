{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ],
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "test-utils": ["./utils/test-utils"],
      "matchMediaMock": ["./utils/matchMediaMock"],
      "components/*": ["./components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./src/**/*",
    "./pages/**/*", 
    "./themes/**/*",
    "./styles/**/*",
    "./utils/**/*"  
  ],
  "exclude": [
    "**/*.e2e.*",
    "node_modules"
  ]
}
