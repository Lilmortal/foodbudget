{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./src/**/*"
