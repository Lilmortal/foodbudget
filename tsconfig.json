{
  "compilerOptions": {
    "strict": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "isolatedModules": false
  },
  "references": [
    { "path": "./packages/@foodbudget/backend/api" },
    { "path": "./packages/@foodbudget/backend/email" },
    { "path": "./packages/@foodbudget/backend/errors" },
    { "path": "./packages/@foodbudget/backend/jobs" },
    { "path": "./packages/@foodbudget/backend/logger" },
    { "path": "./packages/@foodbudget/frontend" }
  ],
  "files": []
}
