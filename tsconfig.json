{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["packages/@foodbudget/**/*"],
  "exclude": ["**/*/coverage/*", "**/*/dist/*", "**/*.js", "node_modules"]
}
